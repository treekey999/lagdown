<h1></h1>
<%= simple_form_for [:settings, @user],**bootstrap_form_options(form_class: 'form-horizontal') do |f| %>

  <div class="row">
    <div class="col-sm-6">

      <%= f.input :photo_provider, collection: @provider_photo["provider"],prompt: "",input_html: {class: "form-control input-default",style: "width:30%"} %>
      <hr>
      <div class="row">
      <% @provider_photo["provider"].zip @provider_photo["photo_link"] do |p,l|  %>
        <div class="col-xs-6 col-md-3">
          <%= f.label p %>
          <%= image_tag l,size:"125x125",class: "thumbnail" %>
        </div>
      <% end %>

      </div><!--div row_photo-->
      <%= f.label t('profile.upload_photo') %>
      <%= f.file_field :avatar ,class: "form-control input-lg" %>
    </div>

    <div class="col-sm-6">
      <%= f.input :nickname %>
      <%= f.input :homepage %>
      <%= f.input :about, :input_html => {:rows => 10} %>

    </div><!--div row_about-->

  </div><!--div row_page-->
  
<hr>
  <%= f.submit t('.update'), class: "btn btn-success" %>
  <%= link_to t('action.reset'),edit_settings_user_path,class: "btn btn-primary" %>
<% end %>