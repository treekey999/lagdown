<%= image_tag "lagdown.png" %>
<h1>Sign in</h1>
<div class="col-sm-4">

<%= form_for(resource,:as => resource_name, :url => session_path(resource_name),class: "form-horizontal") do |f| %>
  
    <%= f.text_field :email, :required => false, :autofocus => true,placeholder: " Enter email",class: "form-control",size: 20 %><br>
    
    <%= f.password_field :password, :required => false,placeholder: " Password",class: "form-control",size: 20 %><br>
    remember me?
    <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <br><br>

  <div class="form-actions">
    <%= f.submit "Sign in",class: "btn btn-lg btn-primary "%>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name),class: "btn btn-lg btn-success" %>
    <% end -%>
  </div>

<% end %>

</div>

<%= render "users/shared/links" %>
